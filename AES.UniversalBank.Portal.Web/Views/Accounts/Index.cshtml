@model System.Collections.Generic.IList<AES.UniversalBank.Common.Entities.Account>

@{
    ViewBag.Title = "UB - Cuentas y Transacciones";
}

<h2>Pagos Automáticos</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Cuentas
    </div>
    @if (Model.Any())
    {
        <table class="table">
            <tr>
                <th>Numero</th>
                <th>Tipo</th>
                <th>Saldo</th>
                <th></th>
            </tr>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.Type.ToString()</td>
                    <td>@account.BalanceValue.GetValueOrDefault().ToString("C")</td>
                    <td>@Html.ActionLink("Transacciones", "Detail", new { id = account.Id }, new { @class = "btn btn-primary btn-sm"})</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">
            <p class="lead">No tiene cuentas registradas.</p>
        </div>
    }
</div>

