@model AES.UniversalBank.Portal.BusinessLogic.Models.AccountInfo

@{
    ViewBag.Title = "UB - Informacion de Cuenta";
}

<h2>Informacion de Cuenta</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Datos del Cliente
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-2">
                <p><strong>Nombre</strong></p>
                <p><strong>E-mail</strong></p>
            </div>
            <div class="col-sm-10">
                <p>@Model.Customer.Name</p>
                <p>@Model.Customer.Email</p>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-success">
    <div class="panel-heading">
        Cuentas
    </div>
    @if (Model.Accounts.Any())
    {
        <table class="table">
            <tr>
                <th>Numero</th>
                <th>Tipo</th>
                <th>Saldo</th>
            </tr>
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.Type.ToString()</td>
                    <td>@account.BalanceValue.GetValueOrDefault().ToString("C")</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">
            <p class="lead">No tiene cuentas registradas.</p>
        </div>
    }
</div>

<div class="panel panel-warning">
    <div class="panel-heading">
        Prestamos
    </div>
    @if (Model.Loans.Any())
    {
        <table class="table">
            <tr>
                <th>Numero</th>
                <th>Cuotas pagadas</th>
                <th>Saldo total</th>
            </tr>
            @foreach (var loan in Model.Loans)
            {
                <tr>
                    <td>123</td>
                    <td>12 de 24</td>
                    <td>$ 123.456</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">
            <p class="lead">No tiene prestamos registrados.</p>
        </div>
    }
    
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        Pagos programados
    </div>
    @if (Model.Payments.Any())
    {
        <table class="table">
            <tr>
                <th>Descripcion</th>
                <th>Tipo</th>
            </tr>
            @foreach (var payment in Model.Payments)
            {
                <tr>
                    <td>@payment.Description</td>
                    <td>Recurrente</td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">
            <p class="lead">No tiene pagos programados.</p>
        </div>
    }
</div>

